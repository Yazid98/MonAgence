{% extends 'base.html.twig' %}
{% block title %}ImmoBadarou | Gérer les biens {% endblock %}

{% block body %}

	<div class="container mt-4">
    
        <h1> Gérer les biens </h1>

        <table class="table table-striped"> 
        
            <thead>
                <tr>
                    <td> Titre</td>
                    <td> Actions</td>
                </tr>
            </thead>

            <tbody>
            {% for property in properties %}

                <tr>
                    <td> {{property.title}} </td>
                    <td> <a href=" {{ path('admin_property_edit', {id : property.id}) }} " class="btn btn-secondary">Editer </a> </td>
                </tr>
            
            {% endfor %}
            </tbody>
        
        </table>

    </div>
	
	
{% endblock %}
